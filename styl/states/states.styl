.gallery,
.about-page,
.page{
	display: none;
}

.state_gallery{
	.gallery{
		display: block;
	}

	.logo{
		cursor default
	}
}

.state_page{
	.page{
		display: block;
	}
}

.state_about{
	.about-page{
		display: block;
	}

	.about-link{
		display none
	}
}

.state_load{
	position relative
	
	&:before{
		content ''
		position absolute
		z-index 10000
		width 100%
		height 100%
		background #FFF
		background rgba(255, 255, 255, .3)  
	}
}

