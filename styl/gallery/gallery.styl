.gallery{
	font-size 0
	position relative
	padding-bottom 100px
	margin-bottom 100px
	overflow hidden
	
	&__item {
		display inline-block
		vertical-align top
		font-size 16px;
	}

	&__more-btn{
		position absolute
		bottom 0
		font-family title_font 
		width 50px
		height 50px
		font-size 48px
		color dark
		line-height 50px
		background none
		border 0
		left: 50%
		margin-left unit(-@width/2, px)
		text-align center
		outline 0
		
		.gallery_no-more &{
			display none
		}
	}
}

.gallery_no-more{
	padding-bottom 0
}