.gallery{
	font-size: 0;
	position: relative;
	padding-bottom: 50px;
	
	&__item {
		display: inline-block;
		vertical-align: top;
		font-size: 16px;
	}

	&__more-btn{
		position: absolute;
		bottom: 0;
		width: 100%;
		height: 50px;
		line-height: 50px;
		font-size: 16px;
		text-align: center;
	}
}